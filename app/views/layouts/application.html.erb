<!DOCTYPE html>
<html>
  <head>
    <title>RockOn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="icon" href="https://redpebblelol.com/wp-content/uploads/2019/03/cropped-R-favicon.png">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>",
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
